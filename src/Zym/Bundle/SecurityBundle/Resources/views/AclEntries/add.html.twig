{% extends "ZymSecurityBundle::layout.html.twig" %}

{% block title %}{{ 'Add ACL Entry' | trans({ }, 'ZymSecurityBundle') }}{% endblock %}

{% block content %}
	<div class="page-header">
		<h1>
			{{ 'Add ACL Entry' | trans({}, 'ZymSecurityBundle') }}
			<small>{{ aclClass.classType |e }}</small>
		</h1>
	</div>

	<div class="btn-toolbar">
		<div class="btn-group">
			<a class="btn" href="javascript: history.back();">
				<i class="icon-arrow-left"></i>
				{{ 'Back' | trans({}, 'ZymSecurityBundle') }}
			</a>
		</div>
	</div>

	<form class="form-horizontal" action="{{ path('zym_security_acl_entries_add') }}" method="post" {{ form_enctype(form) }}>
		{{ form_rest(form) }}

		<fieldset class="form-actions">
			<button class="btn btn-primary" type="submit">{{ 'Create' | trans({}, 'ZymSecurityBundle') }}</button>
			<button class="btn" type="button" onclick="history.back();">{{ 'Cancel' | trans({}, 'ZymSecurityBundle') }}</button>
		</fieldset>
	</form>
{% endblock %}