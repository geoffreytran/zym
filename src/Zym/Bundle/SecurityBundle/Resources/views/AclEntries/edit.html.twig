{% extends "ZymSecurityBundle::layout.html.twig" %}

{% block title %}{{ 'Edit ACL Entry' | trans({ }, 'ZymSecurityBundle') }}{% endblock %}

{% block content %}
    <div class="page-header">
        <h1>
            {{ 'Edit ACL Entry' | trans({}, 'ZymSecurityBundle') }}
            <small>{{ aclClass.classType |e }}</small>
        </h1>
    </div>

    <div class="btn-toolbar">
        <div class="btn-group">
            <a class="btn" href="javascript: history.back();">
                <i class="icon arrow-left"></i>
                {{ 'Back' | trans({}, 'ZymSecurityBundle') }}
            </a>
        </div>
    </div>

    <form action="" method="post" {{ form_enctype(form) }}>
        {{ form_rest(form) }}

        <fieldset class="form-actions">
            <input type="submit" value="{{ 'Save changes' | trans({}, 'ZymSecurityBundle') }}" class="btn primary" />
            <a class="btn" href="{{ path('zym_security_acl_entries') }}">{{ 'Cancel' | trans({}, 'ZymSecurityBundle') }}</a>
        </fieldset>
    </form>
{% endblock content %}