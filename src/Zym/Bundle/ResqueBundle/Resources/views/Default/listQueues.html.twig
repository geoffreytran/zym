{% extends "ZymMailBundle::layout.html.twig" %}

{% block title %}{{ 'Queues' | trans({}, 'ZymResqueBundle') }}{% endblock %}

{% block content %}
    <div class="page-header">
        <h1>
            {{ 'Queues List' | trans({}, 'ZymResqueBundle') }}
            <small></small>
        </h1>
    </div>
    {% for queue in queues %}
        <div class="row">
            <h3 class="span">
                {{ queue.name }}
            </h3>
        </div>
        <div class="row-fluid">
            <div class="span">
                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th class="span5">
                            Name
                        </th>
                        <th class="span5">
                            Args
                        </th>
                    </tr>
                    </thead>

                    {% for job in queue.jobs %}
                        <tr>
                            <td>{{ job.name }}</td>
                            <td>
                                {{ job.args | json_encode }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="2">
                                <em>empty...</em>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    {% endfor %}
{% endblock %}
