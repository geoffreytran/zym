{% extends "ZymMailBundle::layout.html.twig" %}

{% block title %}{{ 'Queues' | trans({}, 'ZymResqueBundle') }}{% endblock %}

{% block content %}
    <div class="row-fluid">
        <h2 class="span">
            Queues
        </h2>
    </div>

    <div class="row-fluid">
        <div class="span">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th class="span5">
                        Name
                    </th>
                    <th class="span5">
                        Jobs
                    </th>
                </tr>
                </thead>
                {% for queue in resque.queues %}
                    <tr>
                        <td>{{ queue.name }}</td>
                        <td>{{ queue.size }}</td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
    <div class="row-fluid">
        <a class="span1 offset9" href="{{ path('zym_resque_list_queues') }}">more...</a>
    </div>

    <div class="row-fluid">
        <h2 class="span">Workers</h2>
    </div>
    <div class="row-fluid">
        <div class="span">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th class="span3">
                            Where
                        </th>
                        <th class="span3">
                            Queues
                        </th>
                        <th class="span4">
                            Processing
                        </th>
                        <th class="span1">
                            Processed
                        </th>
                        <th class="span1">
                            Failed
                        </th>
                    </tr>
                </thead>

                {% for worker in resque.workers %}
                    <tr>
                        <td>{{ worker.id }}</td>
                        <td>
                            {% for queue in worker.queues %}
                                <span class="label label-info">{{ queue.name }}</span>
                            {% endfor %}
                        </td>
                        <td>
                            {% set job = worker.currentJob %}
                            {% if job %}
                                <div>
                                    <strong>{{ job.name }}</strong>
                                </div>
                                <div class="row">
                                    <span class="pull-right">{{ worker.currentJobStart|date }}</span>
                                </div>
                                <div>
                                    <span>
                                        <ul class="unstyled">
                                            {% for argname, argvalue in job.args %}
                                                <li>
                                                    <span>{{ argname }}</span>
                                                    <em class="pull-right">{{ argvalue }}</em>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </span>
                                </div>
                            {% else %}
                                <em>idle</em>
                            {% endif %}
                        </td>
                        <td>{{ worker.processedCount }}</td>
                        <td>{{ worker.failedCount }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">
                            <em>empty...</em>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>

    <div class="row-fluid">
        <h2 class="span">Redis</h2>
    </div>

    <div class="row-fluid">
        <strong class="span2">Host</strong><span class="span3">{{ resque.redisConfiguration.host }}</span>
    </div>
    <div class="row-fluid">
        <strong class="span2">Port</strong><span class="span3">{{ resque.redisConfiguration.port }}</span>
    </div>
    <div class="row-fluid">
        <strong class="span2">Database</strong><span class="span3">{{ resque.redisConfiguration.database }}</span>
    </div>
{% endblock %}