{% extends "ZymThemeBundle::layout.html.twig" %}

{% block title %}{{ 'New Theme Rule' | trans({}, 'ZymThemeBundle') }}{% endblock %}

{% block content %}
	<div class="page-header">
		<h1>{{ 'New Theme Rule' |trans({}, 'ZymThemeBundle') }}</h1>
	</div>
	
	<div class="btn-toolbar">
		<div class="btn-group">
			<a class="btn" href="javascript: history.back();">
				<i class="icon-arrow-left"></i>
				{{ 'Back' | trans({}, 'ZymThemeBundle') }}
			</a>
		</div>
	</div>

	<form class="form-horizontal" action="{{ path('zym_theme_theme_rules_add') }}" method="post" {{ form_enctype(form) }}>
		{{ form_rest(form) }}

		<fieldset class="form-actions">
			<button class="btn btn-primary" type="submit">{{ 'Create' | trans({}, 'ZymThemeBundle') }}</button>
			<button class="btn" type="button" onclick="history.back();">{{ 'Cancel' | trans({}, 'ZymThemeBundle') }}</button>
		</fieldset>
	</form>
{% endblock %}