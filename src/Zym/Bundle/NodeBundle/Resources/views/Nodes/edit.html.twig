{% extends "ZymNodeBundle::layout.html.twig" %}

{% block title %}{{ 'Edit "%title%"' | trans({ '%title%': node.title }, 'ZymNodeBundle') }}{% endblock %}

{% block content %}
    <div class="page-header">
        <h1>
            {{ 'Edit %nodeType%' | trans({ '%nodeType%': node.nodeType.name }, 'ZymNodeBundle') }}
            <small>{{ node.title |e }}</small>
        </h1>
    </div>

    <div class="btn-toolbar">
        <div class="btn-group">
            <a class="btn" href="{{ path('zym_node_node_types') }}">
                <i class="icon-arrow-left"></i>
                {{ 'Content' | trans({}, 'ZymNodeBundle') }}
            </a>
        </div>

        <div class="btn-group">
            <a class="btn" href="{{ path('zym_security_acl_object_aces', { 'type': 'Zym\\Bundle\\NodeBundle\\Entity\\Node', 'identifier': node.id }) }}">
                <i class="icon-lock"></i>
                {{ 'Permissions' | trans({}, 'ZymNodeBundle') }}
            </a>
        </div>
    </div>


    <form class="form-horizontal" action="" method="post" {{ form_enctype(form) }}>
        {{ form_rest(form) }}

        <fieldset class="form-actions">
            <button class="btn btn-primary" type="submit">{{ 'Save changes' | trans({}, 'ZymNodeBundle') }}</button>
            <button class="btn" onclick="history.back();">{{ 'Cancel' | trans({}, 'ZymNodeBundle') }}</button>
        </fieldset>
    </form>
{% endblock content %}