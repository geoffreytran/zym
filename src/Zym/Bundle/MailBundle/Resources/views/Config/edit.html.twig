{% extends "ZymMailBundle::layout.html.twig" %}

{% block title %}{{ 'Mail Configuration' | trans({}, 'ZymMailBundle') }}{% endblock %}

{% block content %}
    <div class="page-header">
        <h1>
            {{ 'Mail Configuration' | trans({}, 'ZymMailBundle') }}
        </h1>
    </div>

    <div class="btn-toolbar">
        <div class="btn-group">
            <a class="btn" href="javascript: history.back();">
                <i class="icon-arrow-left"></i>
                {{ 'Back' | trans({}, 'ZymMailBundle') }}
            </a>
        </div>
    </div>

    <form class="form-horizontal" action="" method="post" {{ form_enctype(form) }}>
        {{ form_rest(form) }}

        <fieldset class="form-actions">
            <button class="btn btn-primary" type="submit">{{ 'Save changes' | trans({}, 'ZymMailBundle') }}</button>
            <button class="btn" type="button" onclick="history.back();">{{ 'Cancel' | trans({}, 'ZymMailBundle') }}</button>
        </fieldset>
    </form>
{% endblock %}