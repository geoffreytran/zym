{% extends "ZymFieldBundle::layout.html.twig" %}

{% block title %}{{ 'Edit "%title%"' | trans({ '%title%': fieldConfig.label }, 'ZymFieldBundle') }}{% endblock %}

{% block content %}
    <div class="page-header">
        <h1>
            {{ 'Edit Field Config: %type%' | trans({ '%type%': fieldConfig.fieldType }, 'ZymFieldBundle') }}
            <small>{{ fieldConfig.id |e }}</small>
        </h1>
    </div>

    <div class="btn-toolbar">
        <div class="btn-group">
            <a class="btn" href="javascript: history.back();">
                <i class="icon-arrow-left"></i>
                {{ 'Back' | trans({}, 'ZymFieldBundle') }}
            </a>
        </div>

        <div class="btn-group">
            <a class="btn" href="{{ path('zym_security_acl_object_aces', { 'type': 'Zym\\Bundle\\FieldBundle\\Entity\\FieldConfig', 'identifier': fieldConfig.id }) }}">
                <i class="icon-lock"></i>
                {{ 'Permissions' | trans({}, 'ZymFieldBundle') }}
            </a>
        </div>
    </div>


    <form class="form-horizontal" action="" method="post" {{ form_enctype(form) }}>
        {{ form_rest(form) }}

        <fieldset class="form-actions">
            <button class="btn btn-primary" type="submit">{{ 'Save changes' | trans({}, 'ZymFieldBundle') }}</button>
            <button class="btn" onclick="history.back();">{{ 'Cancel' | trans({}, 'ZymFieldBundle') }}</button>
        </fieldset>
    </form>
{% endblock content %}