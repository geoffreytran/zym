<div class="modal-header">
    <a href="#" class="close" data-dismiss="modal">&times;</a>
    <h3>{{ 'Confirm Deletion' | trans({}, 'ZymMenuBundle') }}</h3>
</div>

<div class="modal-body">
    <p>
        You are about to delete menu item <strong>"{{ menu.label |e }}"</strong>.
        This action cannot be undone.<br />
        <strong>Are you sure you want to proceed?</strong>
    </p>
</div>

<div class="modal-footer">
    <form action="{{ path('zym_menus_delete', { 'id' : menu.name }) }}" method="post" {{ form_enctype(form) }}>
        {{ form_rest(form) }}        
        
        <input class="btn btn-danger" type="submit" value="{{ 'Confirm Deletion' | trans({}, 'ZymMenuBundle') }}" />
        <a href="#" class="btn" data-dismiss="modal">{{ 'Cancel' | trans({}, 'ZymMenuBundle') }}</a>
    </form>
</div>