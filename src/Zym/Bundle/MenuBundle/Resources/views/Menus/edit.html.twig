{% extends "ZymMenuBundle::layout.html.twig" %}

{% block title %}{{ 'Edit Menu' | trans({}, 'ZymMenuBundle') }}{% endblock %}

{% block content %}
    <div class="page-header">
        <h1>
            {{ 'Edit Menu' | trans({}, 'ZymMenuBundle') |e }}
            <small>{{ menu.label | trans({}, 'ZymMenuBundle') |e }}</small>
        </h1>
    </div>

    <div class="btn-toolbar">
        <div class="btn-group">
            <a class="btn" href="javascript: history.back();">
                <i class="icon-arrow-left"></i>
                {{ 'Back' | trans({}, 'ZymMenuBundle') }}
            </a>
        </div>

        <div class="btn-group">
            <a class="btn" href="{{ path('zym_security_acl_object_aces', { 'type': 'Zym\\Bundle\\MenuBundle\\Entity\\Menu', 'identifier': menu.name }) }}">
                <i class="icon-lock"></i>
                {{ 'Permissions' | trans({}, 'ZymMenuBundle') }}
            </a>
        </div>
    </div>

    <form class="form-horizontal" action="{{ path('zym_menus_edit', { 'id': menu.name }) }}" method="post" {{ form_enctype(form) }}>
        {{ form_rest(form) }}

        <fieldset class="form-actions">
            <button class="btn btn-primary" type="submit">{{ 'Save changes' | trans({}, 'ZymMenuBundle') }}</button>
            <button class="btn" type="button" onclick="history.back();">{{ 'Cancel' | trans({}, 'ZymMenuBundle') }}</button>
        </fieldset>
    </form>
{% endblock content %}