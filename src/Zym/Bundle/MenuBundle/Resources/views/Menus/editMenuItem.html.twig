{% extends "ZymMenuBundle::layout.html.twig" %}

{% block title %}{{ 'Edit a Menu Item' | trans({}, 'ZymMenuBundle') }}{% endblock %}

{% block content %}
    <div class="page-header">
        <h1>
            {{ 'Edit Menu Item' | trans({}, 'ZymMenuBundle') |e }}
            <small>{{ menuItem.label | trans({}, 'ZymMenuBundle') |e }}</small>
        </h1>
    </div>
    
    <form action="" method="post" {{ form_enctype(form) }}>
        {{ form_rest(form) }}
        {{ form_row(form.parent, { 'empty_value': '---' }) }}
    
        <fieldset class="form-actions">
            <button class="btn btn-primary" type="submit">{{ 'Save changes' | trans({}, 'ZymMenuBundle') }}</button>
            <button class="btn" onclick="history.back();">{{ 'Cancel' | trans({}, 'ZymMenuBundle') }}</button>
        </fieldset>
    </form>
{% endblock content %}