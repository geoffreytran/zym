{% extends "ZymUserBundle::layout.html.twig" %}

{% block title %}{{ 'Create a user account' | trans({}, 'ZymUserBundle') }}{% endblock %}

{% block content %}
    <div class="page-header">
        <h1>
            {{ 'New User' | trans({}, 'ZymUserBundle') }}
            <small>{{ 'Create a new user' | trans({}, 'ZymUserBundle') }}</small>
        </h1>
    </div>

    <form class="form-horizontal" action="" method="post" {{ form_enctype(form) }}>
        <fieldset>
            <legend>{{ 'User Information' | trans({}, 'ZymUserBundle') }}</legend>
            {{ form_row(form.firstName) }}
            {{ form_row(form.lastName) }}
            {{ form_row(form.email) }}
            {{ form_row(form.plainPassword) }}
        </fieldset>

        <fieldset>
            <legend>{{ 'Groups and Permissions' | trans({}, 'ZymUserBundle') }}</legend>
            {{ form_row(form.groups) }}
        </fieldset>

        {{ form_rest(form) }}
    
        <fieldset class="form-actions">
            <button class="btn btn-primary" type="submit">{{ 'Create' | trans({}, 'ZymUserBundle') }}</button>
            <button class="btn" type="button" onclick="history.back();">{{ 'Cancel' | trans({}, 'ZymUserBundle') }}</button>
        </fieldset>
    </form>
{% endblock content %}