{% extends "ZymUserBundle::layout.html.twig" %}

{% block title %}{{ 'Editing User' | trans({}, 'ZymUserBundle') }} {{ user.fullName|e }}{% endblock %}

{% block content %}
    <div class="page-header">
        <h1>
            {{ 'Editing User' | trans({}, 'ZymUserBundle') }} {{ user.fullName|e }}
            <small>{{ user.username |e }}</small>
        </h1>
    </div>

    <div class="btn-toolbar">
        <div class="btn-group">
            <a class="btn" href="javascript: history.back()">
                <i class="icon-arrow-left"></i> {{ 'Back' | trans({}, 'ZymUserBundle') }}
            </a>
        </div>

        <div class="btn-group">
            {% if is_granted('VIEW', user) %}
            <a class="btn" href="{{ path('zym_user_users_show', { "id": user.id }) }}">
                <i class="icon-share"></i> {{ 'View' | trans({}, 'ZymUserBundle') }}
            </a>
            {% endif %}
        </div>

        <div class="btn-group">
            {% if is_granted('DELETE', user) %}
            <a class="btn" href="{{ path('zym_user_users_delete', { "id": user.id }) }}" data-toggle="ajax-modal">
                <i class="icon-remove"></i> {{ 'Delete' | trans({}, 'ZymUserBundle') }}
            </a>
            {% endif %}
        </div>
    </div>

    <form class="form-horizontal" action="" method="post" {{ form_enctype(form) }}>
        {{ form_errors(form) }}
        
        <fieldset>
            <legend>User Information</legend>
            {{ form_row(form.firstName) }}
            {{ form_row(form.lastName) }}
            {{ form_row(form.email) }}
            {{ form_row(form.plainPassword) }}
        </fieldset>

        <fieldset>
            <legend>Groups and Permissions</legend>
            {{ form_row(form.groups) }}
        </fieldset>

        {{ form_rest(form) }}

        <fieldset class="form-actions">
            <button class="btn btn-primary" type="submit">{{ 'Save changes' | trans({}, 'ZymUserBundle') }}</button>
            <button class="btn" onclick="history.back();">{{ 'Cancel' | trans({}, 'ZymUserBundle') }}</button>
         </fieldset>
    </form>
{% endblock content %}